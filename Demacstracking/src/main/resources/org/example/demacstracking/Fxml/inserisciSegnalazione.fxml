<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demacstracking.controller.InserisciSegnalazioneController">
   <center>
      <GridPane style="-fx-background-color: linear-gradient(to top, red, orange);" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="INSERISCI SEGNALAZIONE" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold" size="39.0" />
               </font>
            </Label>
            <TextArea fx:id="descrizione" maxWidth="600.0" prefHeight="134.0" prefWidth="506.0" promptText="Scrivi qualcosa..." GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Button fx:id="invia" mnemonicParsing="false" onMouseClicked="#tastoInvia" style="-fx-background-color: black; -fx-background-radius: 50px;" text="INVIA" textFill="WHITE" GridPane.halignment="CENTER" GridPane.rowIndex="3">
               <font>
                  <Font name="System Bold" size="23.0" />
               </font>
            </Button>
            <Button fx:id="logOut" mnemonicParsing="false" onMouseClicked="#tastoLogOut" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: black; -fx-background-radius: 20;" text="Logout" textFill="WHITE" GridPane.halignment="RIGHT">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
               <GridPane.margin>
                  <Insets right="40.0" />
               </GridPane.margin>
            </Button>
            <Label fx:id="messaggioDiRiuscita" text="Segnalazione fatta!" textFill="#26ff00" GridPane.halignment="CENTER" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </center>
</BorderPane>
